{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "src/**/*.spec.ts"],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts",
  "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts"
}